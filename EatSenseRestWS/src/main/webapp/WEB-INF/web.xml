<!--         </web-resource-collection> -->
<!--         <auth-constraint> -->
<!--             <role-name>admin</role-name> -->
<!--         </auth-constraint> -->
<!--     </security-constraint> -->

	<security-constraint>
        <web-resource-collection>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/templates/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
   	</security-constraint>
   	
		
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
